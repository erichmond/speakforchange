#homepageIntro {
  border-top: 1px solid #CCC;
  padding-top: 20px;
  margin-top: 10px;

}
#homepageIntro p {
  font-size: 13px;
}
#creativeCommons {
  margin-top: 30px; 
}
.container {
  border: 3px solid #333;

  min-height: 900px;
  background-color: white;
  width: 966px;
}
#screencast {
  margin-left: 3px;
  padding-top: 4px;
  clear:both;
  display: none;
  font-size: 16px;
}
#screencast h2 {
  display: inline;
}
#showAllLink {
  display: none;
}
#sidebar {
  float: left;
  width: 213px;
  padding-left: 1px;
  margin-right: 0px;
  margin-top: 4px;
}
#sidebar h2 {
  font-size: 16px;
  margin-bottom: 0;
}
#bodyContent {
  padding-right: 7px;
  border-right: 1px dotted black;
  min-height: 900px;

}
#bodyContent, #sidebar {
  padding-top: 6px;
}
h2 {
  margin-bottom: 4px;
}
#top-links {
  position: absolute;
  right: 10px;
  color: #CCC;
}
#top-links a {
  font-size: 1em;
}
body {
  margin-top: 4px;
  background-color: #404958;
}
body p {
  font-size: 14px;
  margin-bottom: 7px;
}
input[type=text], input[type=password] {
  font-size: 1.0em;
}
#header * {
  color: black;
}
#header {
  width: 956px;
  margin-bottom: 0px;
  padding: 0px 10px 0 0px;
  background-image: url(/images/constitution_bg3.jpg)
}
#header img {
  float: left;
  margin-right: 10px;
}
#header h1 {
  line-height: 66px;
  font-size: 30px;
  margin-bottom: 6px;
  text-align: right;
}
#header h1 a {
  text-decoration: none;
}
#forWord { color: red; }
#changeWord { color: #6C21FF; }
#usWord { color: white; }
#speakWord { color: red; }
#forWord { color: white; }
#changeWord { color: #6C21FF; }
#usWord { color: white;  }
#body {
  padding: 0 8px;
  font-size: 13px;
}
.tagline {
  font-size: 18px;
  font-weight: normal;
  color: #ccc;
}
.phoneNumber {
  font-size: 20px;
  font-weight: bold;
  padding: 2px;
}
#aboutPage {
  margin-bottom: 20px;

}
#aboutPage h2 {
  font-size: 22px;
}
#aboutPage p {
  font-size: 14px;

}
#aboutPage ul li {
  font-size: 14px;
}
#topNav {
  width: 950px;
  background-color: #000;
  padding: 2px 8px 1px;
  clear: left;
}
#topNav table {
  margin-bottom: 0;
}
#topNav td.editMyMessageLink {
  text-align: right;
}
#topNav form div {
  display: inline;

}

#topNav a, #topNav a:link, #topNav a:visited, #topNav a:hover {
  color: white;
  text-decoration:none;
  font-size: 16px;
  margin-right: 8px;
}
#topNav input {
  color: black;
  font-size: 12px;
}

#topNav a:hover {
  text-decoration:underline;
}
#header form {
  display: inline; 
}
#findAndEditMessageForm {
  width: 966px;
  background-color: yellow;
  margin: 0;
  padding: 0;
  display: none;
}
#findAndEditMessageForm form label {
  display: inline;

}
td.msgCol {
  text-align: right;
  width: 3em;
}

.errorExplanation h2 {
  font-size: 1.2em;
}
.errorExplanation {
  padding: 10px;
  font-size: 1.2em;
  background-color: #FFF1A8;
}
.headerLinks {
  text-align: right;
}
textarea {
  height: auto;
  display: block;
  margin-bottom: 15px;
}
#flash {
  background-color: #FFF1A8;
  text-align: center;
  padding: 10px;
  font-size: 1.4em;
  margin-bottom: 10px;
}
#filterNotice {
  background-color: #FFF1A8;
  text-align: center;
  padding: 3px 10px;
  font-size: 1.2em;
  margin-bottom: 10px;
}
.form {
  margin:10px 0;
  padding: 10px;
  background-color: #ECECEC;
}
.form div {
  margin-bottom: 10px;
}
.emailaddress {
  font-weight: bold;
}
.day-select {
  display: inline;
  margin-right: 10px;
}
.odd {
}
.even {
  background-color: #EFEFEF;
}

.problem {
  font-weight: bold;
  color: red;
}
tr.problem a {
  color: red;
}

ul.cloud {
  list-style-type:none;
  margin-left: 0;
}
.cloud li  {
  display: inline;
  padding: 0 1.4em 3em 0;
  line-height: 3em;
}

.pagination {
}

dd ul {
  margin-left: 0;
}

dd li a {
  font-size: 1.0em;
}

#ajax-progress {
  display: none;
  position: fixed;
  top:0;
  right: 0;
  padding: 2px 10px;
  background-color: red;
  color: white;
}
#digg-button {
  margin-top:10px;
  margin-bottom: 20px;
}
.top_level_genre {
}
.pagination {
  font-size: 1.3em;
  font-weight: bold;
  margin-top: 10px;
  margin-bottom: 15px;
  clear:left;
 }
.message {
  line-height: 1.5em;
  clear: both;
  border-top: 1px dotted #000;
  padding: 8px 0 8px 0;
  font-size: 14px;
}
#messagesCollection table {
  margin-bottom: 0;

}
#messagesCollection td {
  padding: 0;
  margin: 0;
}
#autoplayOption {
  text-align: right;
}
.currentlyPlayingMessage {
  background-color: #BAFFC2;
  background-color: #FEFAE8;
}
.messageDetail .message {
  border: none;
}

.messageRightBox {
  width: 140px;
  /* background-color: #E5ECF9;
   */
  padding: 0 5px;
}
.playlist {
  clear:both;
}
ul.playlist li a {
  letter-spacing: normal;
  padding-top: 0px;
  font-size: 14px;
  font-weight: bold;
}
ul.playlist li a:hover {
  text-decoration: underline;
  letter-spacing: normal;
}
.audioPreparing {
  padding-top: 0px;
  font-size: 14px;
  letter-spacing: normal;

}
.timing {
  padding-top: 8px;
  font-size: 13px;
}
.message li a.audio {
  letter-spacing: 0;
}
.message img {
  float: left;
  padding-right: 8px;
  padding-top: 4px;
}
.legislatorTopRight {
  float:right;
  text-align: right;
}
.legislators {
  margin-bottom: 20px;
}
.legislatorInfo {
  font-size: 14px;
}
.legislatorInfo li {
  list-style-type: none;
}

form {
  font-size: 16px;
}
form label {
  display:block;
}
li div.messageTitle a {
  font-weight: bold;
}
.messageText {
  margin-top: 0;
}
.messageActions {

}
.extensionNumber {
  background-color: #E5ECF9;

}
.tag {
  background-color: #FFDEDE;
}
a.tag:link, a.tag:visited {
  background-color: #FFDEDE;
}

